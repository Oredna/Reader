@page "{id}"
@model Reader.Pages.SingleItemModel
@{
}
<article>
    <h1 class="single-item-heading">@Model.Item.Title</h1>
    <span class="item-meta">
        @Model.Item.Feed.Title
        @if (Model.SourceHost != null)
        {
            @Model.SourceHost
        }
        @Model.Item.Published
        @Model.Item.Author
    </span>
    @if (Model.Item.Read == null)
    {
        <form method="post" asp-page-handler="MarkAsRead" asp-route-id="@Model.Item.Id"><button type="submit">Mark as read</button></form>
    }
    <a href="@Model.Item.Uri" rel="noreferrer" target="_blank">Original item</a>

    @Html.Raw(Model.Item.FullContent)
</article>